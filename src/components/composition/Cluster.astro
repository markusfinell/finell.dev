---
const { tagName = "div", ...props } = Astro.props;
const Tag = tagName;
---

<Tag class:list={["cluster"]} {...props}><slot /></Tag>

<style>
  .cluster:not([class*="space--"]) {
    --space: var(--space--md, 1rem);
  }

  .cluster {
    display: flex;
    flex-wrap: wrap;
    column-gap: var(--space);
    row-gap: var(--space--sm);
  }
</style>
