---
const { tagName = "div", className = "", ...props } = Astro.props;
const Tag = tagName;
---

<Tag class:list={["flow", className]} {...props}><slot /></Tag>

<style is:global>
  .flow > * + * {
    margin-block-start: 2em;
  }

  .flow > :is(h1, h2, h3, h4) + * {
    margin-block-start: 1em;
  }

  .flow > :not(:is(h1, h2, h3, h4)) {
    max-width: 75ch;
  }
</style>
