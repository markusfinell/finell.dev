---
import api from "../../api";
import Blocks from "../Blocks.astro";

interface Attrs {
  ordered?: boolean;
}

interface Props {
  attrs: Attrs;
  innerBlocks: any[];
}

const { attrs, innerBlocks } = Astro.props;

const Tag = attrs?.ordered ? "ol" : "ul";
---

<Tag class:list={api.blockClass(attrs)}>
  <Blocks blocks={innerBlocks} />
</Tag>
