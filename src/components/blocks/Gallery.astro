---
import Grid from "@components/composition/Grid.astro";
import Blocks from "../Blocks.astro";

interface Attrs {
  columns?: number;
}

interface Props {
  blockName: string;
  attrs: Attrs;
  innerBlocks: any[];
  innerContent: any[];
}

const { attrs, innerBlocks } = Astro.props;
const { columns = 3 } = attrs;
---

<Grid className="gallery" columns={columns} gap="var(--space--xl)">
  <Blocks blocks={innerBlocks} />
</Grid>
