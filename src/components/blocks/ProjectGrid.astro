---
import Grid from "@components/composition/Grid.astro";
import Blocks from "../Blocks.astro";
import Flex from "@components/composition/Flex.astro";

interface Attrs {
  heading: string;
}

interface Props {
  blockName: string;
  attrs: Attrs;
  innerBlocks: any[];
}

const { attrs, innerBlocks } = Astro.props;
---

<Flex column class="project-grid gap--lg">
  <h2>{attrs.heading}</h2>
  <Blocks blocks={innerBlocks} />
</Flex>

<style>
  .project-grid :global(.image, .image a) {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 100%;
  }

  :global(.project-grid img) {
    height: 100%;
    max-height: 150px;
    max-width: 300px;
    object-fit: contain;
  }

  @media (prefers-color-scheme: dark) {
    .project-grid :global(img) {
      filter: invert(1);
    }
  }
</style>
