---
import api from "../../api";

interface Attrs {
  textAlign?: string;
  fontSize?: string;
  level?: number;
}

interface Props {
  attrs: Attrs;
  innerHTML: string;
  innerContent: any[];
}

const { attrs, innerHTML } = Astro.props;

const Tag = `h${attrs?.level || 2}`;
const content = api.unwrap(innerHTML);
---

<Tag class:list={[attrs?.textAlign && `text-${attrs.textAlign}`, attrs?.fontSize && `fs--${attrs.fontSize}`]} set:html={content} />
